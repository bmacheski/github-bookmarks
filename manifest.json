{
  "manifest_version": 2,
  "name": "GitHub Starred",
  "description": "Show GitHub starred repos",
  "version": "1.0",
  "icons": {
    "128": "img/star.png"
  },
  "browser_action": {
    "default_icon":  {
      "38": "img/gh.png"
    },
    "default_popup": "window.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "js/background.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
